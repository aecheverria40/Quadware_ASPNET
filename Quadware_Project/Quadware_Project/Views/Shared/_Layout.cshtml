<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quadware</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Material+Icons">

    @Styles.Render("~/content/materialize")
    @Styles.Render("~/content/navbar-fixed")
    @Styles.Render("~/Content/coloreschidos")
    @*@Styles.Render("~/Content/iconos")
    @Styles.Render("~/Content/marca")
    @Styles.Render("~/Content/colorsolido")*@
    @Scripts.Render("~/bundles/modernizr")

    <link rel="icon" href="~/Content/media/favicon.ico">
</head>
<body>
    <nav class="navbar fixed-top navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">
            <img src="~/Content/media/quadware_logo.png" width="30" height="30" alt="quadware" />
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Acerca de Nosotros <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Servicios</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Testimonios</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Alianzas Estratégicas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Galería</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Contacto</a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <button type="button" class="btn btn-info " data-toggle="modal" data-target="#contactoModal">¡Contáctanos!</button>
                </li>
            </ul>
        </div>

    </nav>



    @*<main class="container-fluid" role="main">*@
        @*<div class="container-fluid">*@
        @RenderBody()

        <hr />
        <footer>
            <div class="container-fluid">
                <p>&copy; @DateTime.Now.Year - Quadware</p>
                <p>Siguenos en nuestras rede sosicales. (Poner iconos de redes sociales)</p>
            </div>
        </footer>
        @*</div>*@
    @*</main>*@

    <!-- Modal -->
    <div class="modal fade" id="contactoModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Escribenos</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="=row">
                        <div class="form-group">
                            <label for="inputEmail" class="bmd-label-floating">Correo Electrónico</label>
                            <input type="email" class="form-control" id="inputEmail">
                            <span class="bmd-help">Nunca compartiremos tú correo electrónico.</span>
                        </div>
                        <div class="form-group">
                            <label for="textArea" class="bmd-label-floating">Escribemos tus dudas</label>
                            <textarea class="form-control" id="textArea" rows="3"></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button id="enviar" type="button" class="btn btn-primary">Enviar</button>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="https://kit.fontawesome.com/5a52924003.js"></script>
    @Scripts.Render("~/bundle/popperjsutils")
    @Scripts.Render("~/bundle/popperjs")
    @Scripts.Render("~/bundle/materializejs")
    <script>$(document).ready(function () { $('body').bootstrapMaterialDesign(); });</script>

    <!--Custom-->
    <script src="~/Scripts/pagina/Modal.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
